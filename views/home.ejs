            reprehenderit, tempore animi ut adipisci iure similique voluptas optio corrupti tempora aut? Voluptates, at
            alias? </div>

    </section>
    <section id="matches" class="matches">
       
          
    <section class="dfdf">
      <!--for demo wrap-->
      <h1>Upcoming Matches</h1>
      <div class="tbl-header">
        <table  cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Time</th>
              <th>Team1</th>
              <th>Team2</th>
              <th>Odd</th>
              <th>type-game</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>

            <% for(let i = 0; i < all_tekme_home[0].length;i++){ %> 
                <tr>
                    <td> <%= all_tekme_home[0][i].tim1 %></td>
                    <td> <%= all_tekme_home[0][i].tim2 %></td>
                    <td><%= all_tekme_home[0][i].kvota %></td>
                    <td><%= all_tekme_home[0][i].game %></td>
                    <td onclick="more('<%= all_tekme_home[0][i]._id%>')">Read more...</td>
                  </tr>
                
                    <% } %>

          </tbody>
        </table>
      </div>
    </section>

    </section>

<section class="profit" id="profit" >


    <section class="dfdf">
        <!--for demo wrap-->
        <h1>Profit margin</h1>
        <div class="tbl-header">
          <table cellpadding="0" cellspacing="0" border="0">
            <thead>
              <tr>
                <th>Time</th>
                <th>Team1</th>
                <th>Team2</th>
                <th>Odd</th>
                <th>type-game</th>
              </tr>
            </thead>
          </table>
        </div>
        <div class="tbl-content">
          <table cellpadding="0" cellspacing="0" border="0">
            <tbody>

              <% 
                all_tekme_home[1] = all_tekme_home[1].sort(function(a, b){return a.createdAt - b.createdAt});
                %> 
                  
                <% for(let i = all_tekme_home[1].length-1; i >= 0;i--){
                  
                  if(all_tekme_home[1][i].dalijeproslo !== "neodluceno"){
                    let proslo_class="";
                     if(all_tekme_home[1][i].dalijeproslo == "proslo"){
                         proslo_class="pass";
                     }else{
                        proslo_class="notpass";
                     }
                        %>
                        <tr class="<%= proslo_class %>">
                        <td> <%= all_tekme_home[1][i].removed_tim1 %></td>
                        <td> <%= all_tekme_home[1][i].removed_tim2 %></td>
                        <td><%= all_tekme_home[1][i].removed_game %></td>
                        <td>+2.36%</td>
                      </tr>
                    
                        <%     }} %>


           
             </tbody>
          </table>
        </div>
      </section>



</section>





<script>
function menu(){
    document.getElementById("nav").classList.toggle('active');
}

function more(id){
    console.log(`moreee:   ${id}`);
    window.location.href = `/match?match_id=${id}`;
}

</script>
</body>

</html>